import java.util.ArrayList;
import java.util.List;

public class Hamburgueseria {
    private List<Producto> productCart;
    public Hamburgueseria(){
        this.productCart= new ArrayList<>();
    }
    public void agregarProducto(Producto producto){
        productCart.add(producto);
    }
    public double calcularPrecio(){
        Double precioFinal=0.0;
        for (Producto producto: productCart){
            precioFinal += producto.calcularPrecio();
        }
        return precioFinal;
    }
}
